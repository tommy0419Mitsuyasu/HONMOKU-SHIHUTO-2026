# PostgreSQL Connection URL
# ご自身のPostgreSQL環境に合わせて、ユーザー名、パスワード、ポート、データベース名を変更してください。
DATABASE_URL="postgresql://postgres:password@localhost:5432/shift_management_db"

# JWT Secret Key
# セキュリティのため、長くてランダムな文字列に変更することを強く推奨します。
JWT_SECRET="your_super_secret_key_for_jwt"

# Frontend URL
FRONTEND_URL="http://localhost:3000"

# SMTP Settings for Mailer (e.g., for Gmail, SendGrid, etc.)
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_SECURE=false # true for 465, false for other ports
SMTP_USER="your_email@example.com"
SMTP_PASS="your_email_password_or_app_password"
SMTP_FROM_EMAIL="noreply@example.com"
